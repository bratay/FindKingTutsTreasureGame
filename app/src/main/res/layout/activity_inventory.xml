<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    tools:context="com.example.branden.findkingtutstreasuregame.Inventory">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="134dp"
        android:layout_marginRight="134dp"
        android:layout_marginTop="16dp"
        android:text="Inventory"
        android:textSize="35sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibSave"
        android:layout_width="74dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:saveEnabled="false"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/floppydisk"
        android:layout_marginRight="29dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="29dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginRight="49dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibSave"
        android:layout_marginEnd="49dp" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stats"
        android:layout_marginRight="328dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibStats"
        android:layout_marginEnd="328dp" />

    <ImageButton
         android:id="@+id/ibStats"
         android:layout_width="82dp"
         android:layout_height="63dp"
         android:layout_marginLeft="27dp"
        android:layout_marginTop="6dp"
         android:backgroundTint="@android:color/transparent"
         android:scaleType="fitCenter"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:srcCompat="@drawable/stats"
        android:layout_marginStart="27dp" />

     <ScrollView
         android:layout_width="409dp"
         android:layout_height="569dp"
         android:layout_marginRight="1dp"
         android:layout_marginTop="36dp"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/textView2"
         android:layout_marginEnd="1dp">


         <TableLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent">

             <TableRow
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

                 <ImageButton
                     android:id="@+id/ibBread"
                     android:layout_width="124dp"
                     android:layout_height="114dp"
                     android:background="@android:color/transparent"
                     android:onClick="breadAction"
                     android:scaleType="fitCenter"
                     app:srcCompat="@drawable/bread"
                     tools:layout_editor_absoluteX="88dp"
                     tools:layout_editor_absoluteY="305dp" />

                 <TextView
                     android:id="@+id/tvBreadDIscription"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:text="Lowers three hunger"
                     android:textSize="26sp" />
             </TableRow>

             <TableRow
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

                 <ImageButton
                     android:id="@+id/ibPotion"
                     android:layout_width="124dp"
                     android:layout_height="114dp"
                     android:background="@android:color/transparent"
                     android:onClick="potionAction"
                     android:scaleType="fitCenter"
                     app:srcCompat="@drawable/potion"
                     tools:layout_editor_absoluteX="88dp"
                     tools:layout_editor_absoluteY="305dp" />

                 <TextView
                     android:id="@+id/tvPostionDIscription"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:text="Restores two health"
                     android:textSize="26sp" />
             </TableRow>

             <TableRow
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

                 <ImageButton
                     android:id="@+id/ibSword"
                     android:layout_width="124dp"
                     android:layout_height="114dp"
                     android:background="@android:color/transparent"
                     android:onClick="swordAction"
                     android:scaleType="fitCenter"
                     app:srcCompat="@drawable/sword"
                     tools:layout_editor_absoluteX="88dp"
                     tools:layout_editor_absoluteY="305dp" />

                 <TextView
                     android:id="@+id/tvSwordDIscription"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:text="Rasies attack by one"
                     android:textSize="26sp" />
             </TableRow>

             <TableRow
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

                 <ImageButton
                     android:id="@+id/ibFire"
                     android:layout_width="124dp"
                     android:layout_height="114dp"
                     android:background="@android:color/transparent"
                     android:onClick="fireAction"
                     android:scaleType="fitCenter"
                     app:srcCompat="@drawable/fire"
                     tools:layout_editor_absoluteX="88dp"
                     tools:layout_editor_absoluteY="305dp" />

                 <TextView
                     android:id="@+id/tvWingsDIscription"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:text="Kills one enemy"
                     android:textSize="26sp" />
             </TableRow>

             <TableRow
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

                 <ImageButton
                     android:id="@+id/ibBubble"
                     android:layout_width="124dp"
                     android:layout_height="114dp"
                     android:background="@android:color/transparent"
                     android:onClick="bubbleAction"
                     android:scaleType="fitCenter"
                     app:srcCompat="@drawable/bubble"
                     tools:layout_editor_absoluteX="88dp"
                     tools:layout_editor_absoluteY="305dp" />

                 <TextView
                     android:id="@+id/tvBubbleDIscription"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:text="Deflects three attacks"
                     android:textSize="26sp" />
             </TableRow>

             <TableRow
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

                 <ImageButton
                     android:id="@+id/ibRepel"
                     android:layout_width="124dp"
                     android:layout_height="114dp"
                     android:background="@android:color/transparent"
                     android:onClick="repelAction"
                     android:scaleType="fitCenter"
                     app:srcCompat="@drawable/repel"
                     tools:layout_editor_absoluteX="88dp"
                     tools:layout_editor_absoluteY="305dp" />

                 <TextView
                     android:id="@+id/tvRepelDIscription"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:text="Repels for five step"
                     android:textSize="26sp" />
             </TableRow>

             <TableRow
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

                 <ImageButton
                     android:id="@+id/ibGoldMine"
                     android:layout_width="124dp"
                     android:layout_height="114dp"
                     android:background="@android:color/transparent"
                     android:onClick="goldMineAction"
                     android:scaleType="fitCenter"
                     app:srcCompat="@drawable/goldmine"
                     tools:layout_editor_absoluteX="88dp"
                     tools:layout_editor_absoluteY="305dp" />

                 <TextView
                     android:id="@+id/tvGoldMineDIscription"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:text="Next 3 steps drop items"
                     android:textSize="26sp" />
             </TableRow>
         </TableLayout>
     </ScrollView>


 </android.support.constraint.ConstraintLayout>
